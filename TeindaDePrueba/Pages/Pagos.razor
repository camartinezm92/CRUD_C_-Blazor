@page "/pagos/{id:int}"
@inject NavigationManager NavigationManager

<PageTitle>Pago</PageTitle>

<h1 class="text-center" style="font-size: 3rem;">Implementaremos pagos en línea próximamente</h1>

<div class="text-center mt-4">
    <img src="https://vikwp.com/images/plugins/wompi.png" alt="Pagos Wompi Bancolombia" class="img-fluid" style="max-width: 300px;" />
</div>

<div class="card mx-auto mt-5 shadow-lg" style="max-width: 400px;">
    <div class="card-body">
        <h2 class="text-center">En la caja indique</h2>
        <h2 class="text-center">Su ID de Pedido: </h2>
        <p class="text-center display-4">@id</p>
    </div>
</div>

<div class="d-flex justify-content-center mt-4">
    <button class="btn btn-secondary" @onclick="VolverAtras">Volver Atrás</button>
</div>

@code {
    [Parameter] public int id { get; set; }

    private void VolverAtras()
    {
        NavigationManager.NavigateTo("/listar-pedidos");
    }
}
